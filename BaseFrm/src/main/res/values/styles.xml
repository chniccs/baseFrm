<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <!--<item name="android:textColorPrimary">@color/colorTabIndicator</item>-->
    </style>

    <!-- 自定义loading dialog -->
    <style name="content_dialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <!--<item name="android:windowNoTitle">true</item>&lt;!&ndash;无标题&ndash;&gt;-->
        <item name="android:windowBackground">@color/color_a_8000</item><!--背景透明灰-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    <style name="content_dialog_transparent" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <!--<item name="android:windowNoTitle">true</item>&lt;!&ndash;无标题&ndash;&gt;-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明灰-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--dialog 弹出的透明度效果动画-->
    <style name="dialog_none_animation">
        <item name="android:windowEnterAnimation">@anim/alpha_to_1</item>
        <item name="android:windowExitAnimation">@anim/alpha_to_0</item>
        <!--<item name="android:windowExitAnimation">@null</item>-->
    </style>
    <!--按钮-->
    <style name="AutoButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">#990000ff</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Item_input_container">
        <item name="android:background">#fff</item>
    </style>
    <style name="input_title">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="input_content">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="dialog_no_title" parent="content_dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
    </style>
    <!--  这个是从页面底部弹出的popwindow的动画 -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popwindow_show_up</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popwindow_hidden_down</item>
        <!-- 指定消失的动画xml -->
    </style>
</resources>
